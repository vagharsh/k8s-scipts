{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
   "name": "$FOR_SVC_NAME-pv-$NAMESPACE",
  },
  "spec": {
    "capacity": {
        "storage": "$STORAGE_SIZE"
    },
    "accessModes": [ "ReadWriteMany" ],
    "nfs": {
        "path": "$NFS_PATH",
        "server": "$NFS_SERVER"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}